<h2> Tareas: </h2>

<table style="padding-left:10px">

<ul>
<% @lista_de_tarea.tareas.each do |t| %>  
<tr class="<%= cycle('rowA', 'rowB') %>">
<td><li> <%=h t.nombre %></li> </td>
<td><%= link_to 'Editar', edit_lista_de_tarea_tarea_path(@lista_de_tarea,t) %></td>
<td><%= link_to 'Eliminar', lista_de_tarea_tarea_path(@lista_de_tarea,t), :confirm => 'Are you sure?', :method => :delete %></td>
<tr/>
<% end %> 
</ul>
</table>

<%= link_to 'Editar', edit_lista_de_tarea_path(@lista_de_tarea) %> |
<%= link_to 'Atras', lista_de_tareas_path %> |
<%= link_to 'Agregar Tarea', new_lista_de_tarea_tarea_path(@lista_de_tarea) %>