<h1>Lista de tareas de <%= @user.login %></h1>

<table>

  <tr>
  <th> Nombre: </th>
  <th> &nbsp </th>
  <th> &nbsp</th>
  <th>&nbsp </th>
  <th> #Tareas: </th>
  </tr>
<% @lista_de_tareas.each do |lista_de_tarea| %>

  <tr class="<%= cycle('rowA', 'rowB') %>">
    <td><%=h lista_de_tarea.nombre %></td>
    <td><%= link_to 'Mostrar', lista_de_tarea %></td> 
    <td><%= link_to 'Editar', edit_lista_de_tarea_path(lista_de_tarea) %></td> 
    <td><%= link_to 'Borrar', lista_de_tarea, :confirm => 'Are you sure?', :method => :delete %></td>
	<td><%= lista_de_tarea.tareas.length %> </td>
  </tr>
<% end %>
</table>

<br />

